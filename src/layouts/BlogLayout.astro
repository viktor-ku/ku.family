---
import "../styles/base.css";
import { format } from "date-fns";
import type { MarkdownLayoutProps } from "astro";

interface LayoutProps {
  title?: string;
  timestamp?: number;
  author?: "Viktor";
}

interface Props extends MarkdownLayoutProps<LayoutProps> {
  title: string;
  timestamp: number;
  author: "Viktor";
}

const { frontmatter, ...props } = Astro.props as Props;
const title = frontmatter.title ?? props.title;
const timestamp = frontmatter.timestamp ?? props.timestamp;
const author = frontmatter.author ?? props.author;

const date = format(timestamp, "MMMM do, uuuu");
const padding = "p-4";
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Oxygen:wght@300;400;700&display=swap"
      rel="stylesheet"
    />
    <title>{author} | {title}</title>
  </head>
  <body class="blog">
    <div class="wrapper m-auto">
      <header class={`${padding}`}>
        <h1 class="text-4xl text-white font-extralight">{title}</h1>
        <p class="font-extralight text-sm">{date}</p>
      </header>
      <main class={`${padding} text-lg`}>
        <slot />
      </main>
    </div>
  </body>
</html>

<style>
  .wrapper {
    max-width: 56rem;
    min-width: 40vw;
  }
</style>
